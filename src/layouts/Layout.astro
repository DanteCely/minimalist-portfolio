---
interface Props {
	title: string;
	lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global lang="scss">
	@use '@scss/index' as *;

	body {
		background-color: $color-backgroud;
		color: $color-primary;
	}

	h1,
	h2,
	h3,
	h4 {
		color: $color-heading;
	}

	h1 {
		font-weight: 900;
	}

	h2 {
		font-weight: 800;
	}

	h3 {
		font-weight: 700;
	}

	h4 {
		font-weight: 600;
	}

	h5 {
		font-weight: 500;
	}
</style>
